---
import DownloadIcon from "./icons/DownloadIcon.astro";

interface Props {
  href: string;
  text: string;
}

const { href, text } = Astro.props;
---

<a
  href={href}
  class="text-blue-600 hover:text-blue-800 flex items-center gap-2"
  target="_blank"
  rel="noopener noreferrer"
  aria-label={`Download ${text} (opent in nieuw tabblad)`}
>
  <DownloadIcon />
  {text}
  <span class="sr-only">(opent in nieuw tabblad)</span>
</a>
