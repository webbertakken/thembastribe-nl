---
import '../styles/global.css';

interface Props {
	title: string;
	description?: string;
}

const { title, description = "Themba's Story - A Rhodesian Ridgeback's Journey" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		<link rel="stylesheet" href="https://rsms.me/inter/inter.css" />
	</head>
	<body class="min-h-screen bg-dark-900 text-dark-50 antialiased">
		<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
			<header class="py-6">
				<nav class="flex items-center justify-between">
					<a href="/" class="text-2xl font-bold text-primary-400 hover:text-primary-300 transition-colors">
						Themba
					</a>
					<div class="flex gap-6">
						<a href="/about" class="text-dark-300 hover:text-primary-400 transition-colors">About</a>
						<a href="/story" class="text-dark-300 hover:text-primary-400 transition-colors">Story</a>
						<a href="/puppies" class="text-dark-300 hover:text-primary-400 transition-colors">Puppies</a>
						<a href="/contact" class="text-dark-300 hover:text-primary-400 transition-colors">Contact</a>
					</div>
				</nav>
			</header>
			<main class="py-8">
				<slot />
			</main>
			<footer class="py-8 border-t border-dark-800">
				<div class="flex justify-between items-center">
					<p class="text-dark-400">&copy; {new Date().getFullYear()} Themba's Story. All rights reserved.</p>
					<div class="flex gap-4">
						<a href="#" class="text-dark-400 hover:text-primary-400 transition-colors">Instagram</a>
						<a href="#" class="text-dark-400 hover:text-primary-400 transition-colors">Facebook</a>
					</div>
				</div>
			</footer>
		</div>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
