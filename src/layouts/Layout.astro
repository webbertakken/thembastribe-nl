---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Website over Rhodesian Ridgeback Themba en haar pups" } = Astro.props;
import "../styles/global.css";
---

<!DOCTYPE html>
<html lang="nl" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title} | Themba's Tribe</title>
  </head>
  <body class="flex flex-col min-h-screen bg-slate-50 text-slate-800 md:pl-[calc(100vw-100%)]">
    <header class="bg-amber-900 text-white shadow-md -ml-[calc(100vw-100%)] pl-[calc(100vw-100%)]">
      <div class="container mx-auto p-4">
        <nav class="flex justify-between items-center">
          <a href="/" class="text-2xl font-bold hover:text-amber-200 transition-colors">Themba's Tribe</a>
          <ul class="flex space-x-6">
            <li><a href="/" class="hover:text-amber-200 transition-colors">Over Ons</a></li>
            <li><a href="/verhaal" class="hover:text-amber-200 transition-colors">Verhaal</a></li>
            <li><a href="/pups" class="hover:text-amber-200 transition-colors">Pups</a></li>
            <li><a href="/fotos" class="hover:text-amber-200 transition-colors">Foto's</a></li>
          </ul>
        </nav>
      </div>
    </header>
    <main class="flex-grow">
      <slot />
    </main>
    <footer class="bg-amber-900 text-white mt-auto py-6 -ml-[calc(100vw-100%)] pl-[calc(100vw-100%)]">
      <div class="container mx-auto px-4">
        <div class="text-center">
          <p>Â© {new Date().getFullYear()} Themba's Tribe</p>
        </div>
      </div>
    </footer>
  </body>
</html>
