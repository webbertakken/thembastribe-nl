---
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Themba's Tribe - Rhodesian Ridgeback" } = Astro.props;
---

<!DOCTYPE html>
<html lang="nl" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Themba's Tribe</title>
  </head>
  <body class="flex flex-col min-h-screen bg-slate-50 text-slate-800 md:pl-[calc(100vw-100%)]">
    <main class="flex-grow flex items-center justify-center p-8">
      <div class="max-w-2xl text-center">
        <h1 class="text-4xl font-bold mb-4">Website niet meer beschikbaar</h1>
        <p class="text-xl text-slate-600">
          Deze website is niet meer in gebruik. Bedankt voor uw interesse in Themba's Tribe.
        </p>
      </div>
    </main>
  </body>
</html>
