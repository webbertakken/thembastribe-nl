---
import Layout from '../layouts/Layout.astro';
import { motion } from 'framer-motion';
---

<Layout title="Contact Us">
  <main class="container mx-auto px-4 py-16">
    <motion.div
      initial={{ opacity: 0, y: 20 }}
      animate={{ opacity: 1, y: 0 }}
      transition={{ duration: 0.6 }}
      class="max-w-4xl mx-auto"
    >
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-8">Contact Us</h1>

      <div class="grid md:grid-cols-2 gap-12">
        <div class="prose prose-invert prose-lg">
          <h2 class="text-3xl font-semibold text-white mb-6">Get in Touch</h2>
          <p class="text-xl mb-6">
            We'd love to hear from you! Whether you're interested in our upcoming puppies, have questions about the Rhodesian Ridgeback breed, or just want to learn more about our breeding program, we're here to help.
          </p>

          <div class="space-y-4">
            <div>
              <h3 class="text-xl font-semibold text-white mb-2">Email</h3>
              <p class="text-xl">info@themastribe.nl</p>
            </div>
            <div>
              <h3 class="text-xl font-semibold text-white mb-2">Phone</h3>
              <p class="text-xl">+31 (0)6 12345678</p>
            </div>
            <div>
              <h3 class="text-xl font-semibold text-white mb-2">Location</h3>
              <p class="text-xl">Amsterdam, Netherlands</p>
            </div>
          </div>
        </div>

        <div class="bg-gray-800 p-8 rounded-lg">
          <form class="space-y-6">
            <div>
              <label for="name" class="block text-sm font-medium text-white mb-2">Name</label>
              <input
                type="text"
                id="name"
                name="name"
                class="w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-md text-white focus:outline-none focus:ring-2 focus:ring-purple-500"
                required
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-white mb-2">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                class="w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-md text-white focus:outline-none focus:ring-2 focus:ring-purple-500"
                required
              />
            </div>
            <div>
              <label for="message" class="block text-sm font-medium text-white mb-2">Message</label>
              <textarea
                id="message"
                name="message"
                rows="4"
                class="w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-md text-white focus:outline-none focus:ring-2 focus:ring-purple-500"
                required
              ></textarea>
            </div>
            <button
              type="submit"
              class="w-full bg-purple-600 text-white py-2 px-4 rounded-md hover:bg-purple-700 transition-colors duration-200"
            >
              Send Message
            </button>
          </form>
        </div>
      </div>
    </motion.div>
  </main>
</Layout>
